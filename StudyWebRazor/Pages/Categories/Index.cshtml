@page
@model StudyWebRazor.Pages.Categories.IndexModel

<div class="container">
	<div class="row pt-4 pt-3">
		<div class="col-6">
			<h2 class="text-primary text-uppercase">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="/categories/create" class="btn btn-outline-primary">
				<i class="bi bi-plus-circle"></i>
				New Category
			</a>
		</div>
	</div>
</div>

<table class="table table-striped table-hover table-bordered">
	<thead>
		<tr>
			<th>
				Category Name
			</th>
			<th>
				Display Order
			</th>
			<th></th>

		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
		{
			<tr>
				<td>
					@obj.Name
				</td>
				<td>
					@obj.DisplayOrder
				</td>
				<td>
					<div class="w-100 btn-group" role="group">
						<a asp-page="/categories/edit" asp-route-categoryId="@obj.CategoryId" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a asp-page="/categories/delete" asp-route-categoryId="@obj.CategoryId" class="btn btn-danger mx-2">
							<i class="bi bi-trash"></i> Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>